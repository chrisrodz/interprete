extends layout

block content
  h1 This is your supplier
  h3 #{user.firstTime}
  #profile
      form(action='', method='post')
          label Informacion General
          if !user.hasOwnProperty('name')
            input#inputUserName(type='text', placeholder='Nombre', name='name', required='')
          else
            input#inputUserName(type='text', placeholder='Nombre', name='name', value='#{user.name}', required='')

          if !user.hasOwnProperty('flname')
            input#inputUserFLName(type='text', placeholder='Apellido Paterno', name='flname', required='')
          else
            input#inputUserName(type='text', placeholder='Apellido Paterno', name='flname', value='#{user.flname}', required='')

          if !user.hasOwnProperty('mlname')
            input#inputUserFLName(type='text', placeholder='Apellido Materno', name='mlname', required='')
          else
            input#inputUserName(type='text', placeholder='Apellido Materno', name='mlname', value='#{user.mlname}', required='')
          br
          if !user.hasOwnProperty('birth')
            input#inputUserBirth(type='text', placeholder='Fecha de Nacimiento', name='birth', required='')
          else
            input#inputUserBirth(type='text', placeholder='Fecha de Nacimiento', name='birth', value='#{user.birth}', required='') 
          
          input#inputUserEmail(type='email', placeholder='Email', name='email', value='#{user.email}', required='')
          
          if !user.hasOwnProperty('profession')
            label Profesion 
            select
              option(value="doctor") Medico
              option(value="acountant") Contable
              option(value="lawyer") Abogado
              option(value="professor") Profesor
              option(value="other") Otro
          else
            label Profesion 
            select
              if user.phoneProvider === 'doctor'
                option(value="doctor" selected) Medico
              else
                option(value="doctor") Medico
              if user.phoneProvider === 'acountant'
                option(value="acountant" selected) Contable
              else
                option(value="acountant") Contable
              if user.phoneProvider === 'lawyer'
                option(value="lawyer" selected) Abogado
              else
                option(value="lawyer") Abogado
              if user.phoneProvider === 'professor'
                option(value="professor" selected) Profesor
              else
                option(value="professor") Profesor
              if user.phoneProvider === 'other'
                option(value="other" selected) Otro
              else
                option(value="other") Otro

          if !user.hasOwnProperty('other')
            input#inputUserName(type='text', placeholder='Si otro, especifica', name='other')
          else
            input#inputUserName(type='text', placeholder='Si otro, especifica', name='other', value='#{user.other}')

          if !user.hasOwnProperty('gender')
            label Hombre 
              input#inputUserLanguage(type="radio", name="gender", value="male", required="")
            label Mujer 
              input#inputUserLanguage(type="radio", name="gender", value="female", required="")
          else
            if user.gender === 'male'
              label Hombre 
                input#inputUserLanguage(type="radio", name="gender", value="male", required="", checked)
              label Mujer 
                input#inputUserLanguage(type="radio", name="gender", value="female", required="")
            else
              label Hombre 
                input#inputUserLanguage(type="radio", name="gender", value="male", required="")
              label Mujer 
                input#inputUserLanguage(type="radio", name="gender", value="female", required="", checked)
